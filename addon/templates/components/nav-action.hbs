{{#link-to route
  class='frost-link'
}}
  <div class='content'>
    <div class='nav-route-icon'>
      {{#if item.icon}}
        {{frost-icon
          hook=(concat hookPrefix '-icon')
          hookQualifiers=hookQualifiers
          pack=item.pack
          icon=item.icon
        }}
      {{/if}}
    </div>
    <div>
      <div class='nav-route-name'>
        {{item.name}}
      </div>
      <div class='nav-route-description'>
        {{item.description}}
      </div>
    </div>
  </div>
{{/link-to}}
